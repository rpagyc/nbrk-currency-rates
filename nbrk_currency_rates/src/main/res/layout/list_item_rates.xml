<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  >

  <ImageView
    android:id="@+id/flag"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="16dp"
    android:layout_centerInParent="true"
    android:scaleType="fitCenter"
    tools:src="@drawable/aud"
    />

  <TextView
    android:id="@+id/tvCurrencyCode"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_toRightOf="@+id/flag"
    android:paddingLeft="16dp"
    android:textSize="24sp"
    tools:text="AUD"
    />

  <TextView
    android:id="@+id/tvCurrencyName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/tvCurrencyCode"
    android:layout_marginBottom="8dp"
    android:layout_marginRight="16dp"
    android:layout_toRightOf="@+id/flag"
    android:paddingLeft="16dp"
    tools:text="1 австралийский доллар"
    android:maxLines="1"
    />
  <!-- price -->
  <TextView
    android:id="@+id/tvPrice"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@id/tvCurrencyCode"
    android:layout_alignParentRight="true"
    android:layout_marginRight="16dp"
    android:textSize="24sp"
    tools:text="147.77"
    />

  <TextView
    android:id="@+id/tvChange"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/tvPrice"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="16dp"
    tools:text="12.345"
    android:maxLines="1"
    />

  <ImageView
    android:id="@+id/imgChange"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:layout_below="@+id/tvPrice"
    android:layout_toLeftOf="@+id/tvChange"
    tools:src="@mipmap/ic_up"
    />

  <View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="?android:attr/listDivider"
    />
</RelativeLayout>